<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^([^\.]+)$ $1.php [NC,L]

    RewriteCond %{HTTP_HOST} ^www.xislanders.com$ [NC]
    RewriteRule ^(.*)$ http://xislanders.com/$1 [R=301,L]

    RewriteCond %{SERVER_PORT} 80
    RewriteRule ^(.*)$ https://www.xislanders.com/$1 [R,L]
</IfModule>

